num_one= 5
num_two= 4

total= num_one + num_two
diff= num_one - num_two
product = num_one * num_two
division = num_one / num_two
reminder = num_one % num_two
exp = num_one ** num_two
floordivision = num_one // num_two



print(total)
print(diff)
print(product)
print(division)
print(reminder)
print(exp)
print(floordivision)

